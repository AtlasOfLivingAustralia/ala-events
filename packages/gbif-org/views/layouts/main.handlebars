<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <title>Search 1.0.0 Demo</title>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet" />
    <style>
        html {
            font-family: Open Sans, Helvetica, Sans;
            background: #ddd;
        }

        html,
        body {
            margin: 0;
            padding: 0;
        }

        .myheader {
            background: white;
            border-bottom: 1px solid #bbb;
            color: #333;
            font-size: 24px;
            position: fixed;
            width: 100%;
            top: 0;
        }

        #root {
            /* margin-top: 30px; */
        }
    </style>
</head>

<body>
    <!-- <header class="myheader">Header</header> -->
    <div id="root">{{{body}}}</div>
    <script src="https://unpkg.com/react@16/umd/react.development.js"></script>
    <script src="https://unpkg.com/react-dom@16/umd/react-dom.development.js"></script>

    <script type="text/javascript" src="/gbif-react-components.js"></script>

    <script>
        ReactDOM.hydrate(
            React.createElement(
                gbifReactComponents.Dataset,
                {
                    style: { height: 'calc(100vh - 4.25rem);' },
                    id: 'ca0d8107-a2bd-47a1-91a1-250179b534ec',
                    siteConfig: {
                        routes: {
                            datasetKey: {
                                url: ({ key, gbifOrgLocalePrefix }) => `${gbifOrg}${gbifOrgLocalePrefix}/dataset/${key}`,
                                // url: ({key, gbifOrgLocalePrefix}) => `/dataset/${key}`,
                                isHref: true,
                                route: '/dataset/:key'
                            }
                        }
                    }
                }
            ),
            document.getElementById('root')
        );
    </script>
</body>

</html>