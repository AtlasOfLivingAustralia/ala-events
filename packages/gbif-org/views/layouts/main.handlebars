<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <title>Search 1.0.0 Demo</title>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet" />
    <link href='https://api.mapbox.com/mapbox-gl-js/v2.1.1/mapbox-gl.css' rel='stylesheet' />
    <link href='https://cdnjs.cloudflare.com/ajax/libs/openlayers/6.1.1/ol.min.css' rel='stylesheet' />
    <link
        href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&display=swap"
        rel="stylesheet">

    <style>
        html {
            font-family: Open Sans, Helvetica, Sans;
            background: #ddd;
        }
        html,
        body {
            margin: 0;
            padding: 0;
        }
    </style>
</head>

<body>
    <div id="root">{{{body}}}</div>
    <script src="https://unpkg.com/react@16/umd/react.development.js"></script>
    <script src="https://unpkg.com/react-dom@16/umd/react-dom.development.js"></script>

    {{!-- <script type="text/javascript" src="/gbif-react-components.js"></script> --}}
    <script type="text/javascript" src="http://localhost:3001/gbif-react-components.js"></script>

    <script>
        let appComponent = React.createElement(
            gbifReactComponents["{{ context.componentName }}"],
            {{{ context.props }}}
        );
        

        ReactDOM.render(
            React.createElement(
                gbifReactComponents.BrowserDataContext,
                {
                    initialData: {{{ json context.initialData }}}
                },
                appComponent
            ),
            document.getElementById('root')
        );
    </script>
</body>

</html>