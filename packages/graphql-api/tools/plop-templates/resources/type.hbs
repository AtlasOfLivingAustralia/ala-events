const { gql } = require('apollo-server');

const typeDef = gql`
  extend type Query {
    {{camelCase name}}Search(
      limit: Int, 
      offset: Int, 
      q: String
      ): {{pascalCase name}}SearchResults
    {{camelCase name}}(key: String!): {{pascalCase name}}
  }

  type {{pascalCase name}}SearchResults {
    results: [{{pascalCase name}}]!
    limit: Int!
    offset: Int!
    count: Int!
    endOfRecords: Boolean!
  }

  type {{pascalCase name}} {
    key: ID!
  }
`;

module.exports = typeDef;